{
  "compilerOptions": {
    "target": "es2020",
    "module": "es6",
    "moduleResolution": "node",
    "traceResolution": false,
    "esModuleInterop": true,
    "incremental": true,
    "declaration": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "corba.js": [ "src/orb/index" ],
      "corba.js/*": [ "src/*" ],
      "src/*": [ "src/*" ]
    },
    "plugins": [{
        "transform": "./m13-es-transformer.cjs",
        "after": true,
    }],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "strict": true,
    "strictNullChecks": true,
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "test"
  ]
}
